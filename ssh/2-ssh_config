#!/usr/bin/env bash
# This script configures the SSH client to use a specific private key and disables password authentication.

# Create or update the SSH config file
echo "Host *" > ~/.ssh/config
echo "    IdentityFile ~/.ssh/school" >> ~/.ssh/config
echo "    PasswordAuthentication no" >> ~/.ssh/config

# Ensure the SSH config file has the correct permissions
chmod 600 ~/.ssh/config

# Add a newline at the end of the file (important for UNIX/Linux systems)
echo "" >> ~/.ssh/config

echo "SSH client configured successfully."

